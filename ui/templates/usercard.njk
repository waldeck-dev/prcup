{% macro gencards(position, data) %}
{% for score in data %}
<div class="column is-4-desktop is-6-tablet is-12-mobile">
    <div class="columns usercard mx-2">
        <div class="column has-text-centered">
            <img src="{{ score.user.avatar_url }}" class="avatar" alt="{{ score.user.login }}" />
            <a href="{{ score.user.html_url }}" target="_blank">
                <h2>{{ score.user.login }}</h2>
            </a>
            {% if score.emoji %}<p class="is-size-4">{{ score.emoji }}</p>{% endif %}
            <p class="is-size-5 has-text-weight-bold">{{ score.totalScore }} pts</p>
            <p>{% for s in score.scores %}
            <span class="is-{{ s.type }}{% if s.score == 0 %}{% if s.processed %} is-closed{% else %} in-progress{% endif %}{% elif s.score < 0 %} is-negative{% endif %}">#{{ s.number}}</span>
            {% endfor %}</p>
        </div>
    </div>
</div>
{% endfor %}
{% endmacro %}